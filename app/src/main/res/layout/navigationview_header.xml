<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/head_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/nav_head_portrait"
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="@dimen/dp_70"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_37" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_11"
                    android:layout_marginRight="@dimen/dp_21"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_alignTop="@id/nav_head_portrait"
                    android:layout_toRightOf="@id/nav_head_portrait"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/sp_22"/>

                <TextView
                    android:id="@+id/signature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_marginRight="@dimen/dp_21"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_toRightOf="@id/nav_head_portrait"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="@string/signature"
                    android:textColor="@color/c_999999"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/compile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/signature"
                    android:layout_marginRight="@dimen/dp_21"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="@string/compile"
                    android:textColor="@color/c_fa6a13"
                    android:textSize="@dimen/sp_14" />

                <ImageView
                    android:id="@+id/icon_bianji"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_alignBottom="@id/compile"
                    android:layout_below="@id/signature"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_toLeftOf="@id/compile"
                    android:background="@mipmap/icon_me_bianji"
                    android:scaleType="centerCrop" />

            </RelativeLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/ll"
                android:layout_width="@dimen/dp_288"
                android:layout_height="wrap_content"
                android:layout_below="@id/head_rl"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_38"
                app:cardCornerRadius="@dimen/dp_6">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/color_navigation">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_8"
                        android:text="@string/my_wallet"
                        android:textColor="@color/c_ffffff"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="99"
                        android:textColor="@color/c_ffffff"
                        android:textSize="@dimen/sp_58" />

                    <TextView
                        android:id="@+id/nuit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_3"
                        android:layout_marginTop="@dimen/dp_60"
                        android:layout_toRightOf="@id/balance"
                        android:text="@string/unit"
                        android:textColor="@color/c_ffffff"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/balance"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_7"
                        android:layout_marginBottom="@dimen/dp_11"
                        android:text="@string/win_prize"
                        android:textColor="@color/c_ffffff"
                        android:textSize="@dimen/sp_14" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/cardview"
                android:layout_width="@dimen/dp_288"
                android:layout_height="@dimen/dp_212"
                android:layout_below="@id/ll"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_19"
                app:cardCornerRadius="@dimen/dp_6">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/me_kaquan"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/icon_kaquan"
                            android:layout_width="@dimen/dp_13"
                            android:layout_height="@dimen/dp_14"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_11"
                            android:background="@mipmap/icon_me_kaquan" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_toRightOf="@id/icon_kaquan"
                            android:text="@string/coupon"
                            android:textSize="@dimen/sp_14" />

                        <ImageView
                            android:layout_width="@dimen/dp_6"
                            android:layout_height="@dimen/dp_11"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp_12"
                            android:background="@mipmap/right_arrow" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_2"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:background="@color/c_f0f0f0" />

                    <RelativeLayout
                        android:id="@+id/me_yigou"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/icon_yigou"
                            android:layout_width="@dimen/dp_13"
                            android:layout_height="@dimen/dp_14"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_11"
                            android:background="@mipmap/icon_me_yigou" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_toRightOf="@id/icon_yigou"
                            android:text="@string/already_bought"
                            android:textSize="@dimen/sp_14" />

                        <ImageView
                            android:layout_width="@dimen/dp_6"
                            android:layout_height="@dimen/dp_11"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp_12"
                            android:background="@mipmap/right_arrow" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_2"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:background="@color/c_f0f0f0" />

                    <RelativeLayout
                        android:id="@+id/me_shoucang"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/icon_shoucang"
                            android:layout_width="@dimen/dp_13"
                            android:layout_height="@dimen/dp_14"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_11"
                            android:background="@mipmap/icon_me_shoucang" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_toRightOf="@id/icon_shoucang"
                            android:text="@string/my_favorite"
                            android:textSize="@dimen/sp_14" />

                        <ImageView
                            android:layout_width="@dimen/dp_6"
                            android:layout_height="@dimen/dp_11"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp_12"
                            android:background="@mipmap/right_arrow" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_2"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:background="@color/c_f0f0f0" />

                    <RelativeLayout
                        android:id="@+id/me_guanzhu"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/icon_guanzhu"
                            android:layout_width="@dimen/dp_13"
                            android:layout_height="@dimen/dp_14"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_11"
                            android:background="@mipmap/icon_me_guanzhu" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_toRightOf="@id/icon_guanzhu"
                            android:text="@string/my_interest"
                            android:textSize="@dimen/sp_14" />

                        <ImageView
                            android:layout_width="@dimen/dp_6"
                            android:layout_height="@dimen/dp_11"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp_12"
                            android:background="@mipmap/right_arrow" />

                    </RelativeLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_alignParentBottom="true"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/dp_28">

                <ImageView
                    android:id="@+id/icon_kefu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:background="@mipmap/icon_me_kefu"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/contact_service"
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:layout_toRightOf="@id/icon_kefu"
                    android:text="@string/contact_service"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/sp_12"
                    android:maxLines="2"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:id="@+id/icon_fankui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_toRightOf="@id/contact_service"
                    android:background="@mipmap/icon_me_fankui"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/feedback"
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:layout_toRightOf="@id/icon_fankui"
                    android:text="@string/feedback"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/sp_12"
                    android:maxLines="2"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:id="@+id/icon_banben"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_toRightOf="@id/feedback"
                    android:background="@mipmap/icon_me_banben"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/version_checking"
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:layout_toRightOf="@id/icon_banben"
                    android:text="@string/version_checking"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/sp_12"
                    android:maxLines="2"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

        </RelativeLayout>

</RelativeLayout>
