<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.fragment.LoginFragment"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_73"
        android:text="你好，为了获取更好的服务"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/c_fa6a13"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请登录伴米旅行"
        android:layout_marginTop="@dimen/dp_9"
        android:layout_marginLeft="@dimen/dp_23"
        android:textSize="@dimen/sp_27"
        android:textColor="@color/c_373737"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_106"
        android:layout_marginLeft="@dimen/dp_31">

        <ImageView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/phone"/>

        <TextView
            android:id="@+id/area"
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_20"
            android:text="+86"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_toRightOf="@id/phone"
            android:layout_marginTop="@dimen/dp_3"/>

        <ImageView
            android:id="@+id/select"
            android:layout_width="@dimen/dp_7"
            android:layout_height="@dimen/dp_5"
            android:src="@mipmap/select"
            android:layout_toRightOf="@id/area"
            android:layout_marginTop="@dimen/dp_12"/>

        <EditText
            android:id="@+id/phone_number"
            android:layout_toRightOf="@id/select"
            android:layout_toLeftOf="@id/btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入手机号"
            android:layout_marginLeft="@dimen/dp_16"/>

        <Button
            android:id="@+id/send_code"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_30"
            android:text="发送验证码"
            android:textColor="@color/c_fefefe"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/sp_14"
            android:layout_marginRight="@dimen/dp_22"
            android:background="@mipmap/button_unavailable"/>

    </RelativeLayout>

    <View
        android:layout_width="@dimen/dp_329"
        android:layout_height="@dimen/dp_1"
        android:background="@color/c_fa6a13"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginRight="@dimen/dp_23" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_182"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="or"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/c_a9a9a9"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_6"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageButton
                android:id="@+id/qq"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:background="@drawable/qq"
                android:src="@mipmap/umeng_socialize_qq"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QQ"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/c_4dae46"
                android:layout_marginTop="@dimen/dp_9"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageButton
                android:id="@+id/wechat"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:background="@mipmap/wechat"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信登录"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/c_4dae46"
                android:layout_marginTop="@dimen/dp_9"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageButton
                android:id="@+id/sina"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:background="@drawable/qq"
                android:src="@mipmap/umeng_socialize_sina"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新浪"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/c_4dae46"
                android:layout_marginTop="@dimen/dp_9"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal|bottom"
        android:layout_marginBottom="@dimen/dp_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录或注册同意伴米旅行"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/c_999999"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_18"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:text="用户协议"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/c_fa6a13"/>

            <View
                android:layout_width="@dimen/dp_52"
                android:layout_height="@dimen/dp_1"
                android:background="@color/c_fa6a13"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>